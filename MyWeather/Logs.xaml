<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWeather"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="MyWeather.Logs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Logs">

    <Grid>
        <syncfusion:SfDataGrid x:Name="grdLogs" ColumnSizer="Star">
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn HeaderText="Log ID" MappingName="LogID"/>
                <syncfusion:GridTextColumn HeaderText="Date Time" MappingName="DateTime"/>
                <syncfusion:GridTextColumn HeaderText="Event" MappingName="Event"/>
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>

    </Grid>
</Page>
